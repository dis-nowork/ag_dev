{
  "name": "html-to-md",
  "version": "1.0.0",
  "category": "transformer",
  "description": "Converts HTML content to clean Markdown format. Handles headings, paragraphs, links, images, lists, tables, code blocks, and other common HTML elements with no external dependencies.",
  "input": {
    "type": "json",
    "schema": {
      "type": "object",
      "properties": {
        "html": {
          "type": "string",
          "description": "HTML content to convert"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL to fetch HTML from"
        },
        "preserveWhitespace": {
          "type": "boolean",
          "description": "Whether to preserve original whitespace",
          "default": false
        }
      },
      "oneOf": [
        { "required": ["html"] },
        { "required": ["url"] }
      ]
    },
    "required": [],
    "example": {
      "html": "<h1>Hello</h1><p>World!</p>"
    }
  },
  "output": {
    "type": "json",
    "structure": {
      "type": "object",
      "properties": {
        "markdown": { "type": "string" },
        "success": { "type": "boolean" }
      }
    }
  },
  "tokenSavings": "Saves 100-500 tokens by converting HTML to cleaner Markdown representation",
  "tags": ["html", "markdown", "conversion", "formatting"],
  "requires": ["node"],
  "run": "node run.js",
  "timeout": 30
}