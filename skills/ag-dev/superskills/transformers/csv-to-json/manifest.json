{
  "name": "csv-to-json",
  "version": "1.0.0",
  "category": "transformer",
  "description": "Converts CSV data to JSON format with smart delimiter detection, quoted field handling, and automatic type inference. Provides summary statistics and column information.",
  "input": {
    "type": "json",
    "schema": {
      "type": "object",
      "properties": {
        "csvPath": {
          "type": "string",
          "description": "Path to CSV file to convert"
        },
        "csvString": {
          "type": "string",
          "description": "CSV content as string"
        },
        "delimiter": {
          "type": "string",
          "description": "CSV delimiter (auto-detected if not provided)",
          "default": "auto"
        },
        "hasHeader": {
          "type": "boolean",
          "description": "Whether CSV has header row",
          "default": true
        },
        "inferTypes": {
          "type": "boolean",
          "description": "Whether to infer data types",
          "default": true
        }
      },
      "oneOf": [
        { "required": ["csvPath"] },
        { "required": ["csvString"] }
      ]
    },
    "required": [],
    "example": {
      "csvString": "name,age,active\\nJohn,25,true\\nJane,30,false"
    }
  },
  "output": {
    "type": "json",
    "structure": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "description": "Array of parsed data objects"
        },
        "columns": {
          "type": "array",
          "description": "Array of column information"
        },
        "rowCount": {
          "type": "number",
          "description": "Number of data rows"
        },
        "summary": {
          "type": "object",
          "description": "Summary statistics"
        },
        "success": {
          "type": "boolean"
        }
      }
    }
  },
  "tokenSavings": "Saves 200-1000 tokens by parsing CSV into structured JSON instead of describing raw CSV data",
  "tags": ["csv", "json", "data-parsing", "conversion"],
  "requires": ["node"],
  "run": "node run.js",
  "timeout": 60
}