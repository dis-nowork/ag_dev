{
  "name": "dockerfile-gen",
  "version": "1.0.0",
  "category": "generator",
  "description": "Generates optimized, multi-stage Dockerfiles for different technology stacks with best practices and security considerations.",
  "input": {
    "type": "json",
    "schema": {
      "type": "object",
      "properties": {
        "stack": {
          "type": "string",
          "enum": ["node", "python", "ruby"],
          "description": "Technology stack"
        },
        "packageFile": {
          "type": "string",
          "description": "Package file path (package.json, requirements.txt, Gemfile)"
        },
        "port": {
          "type": "number",
          "description": "Application port",
          "default": 3000
        },
        "extras": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Extra features to include (redis, postgres, nginx, etc)"
        }
      },
      "required": ["stack"]
    },
    "required": ["stack"],
    "example": {
      "stack": "node",
      "packageFile": "package.json",
      "port": 3000,
      "extras": ["postgres"]
    }
  },
  "output": {
    "type": "text",
    "format": "Dockerfile content as string"
  },
  "tokenSavings": "Saves 200-800 tokens by generating complete Dockerfile instead of describing best practices",
  "tags": ["docker", "containerization", "deployment", "devops"],
  "requires": ["node"],
  "run": "node run.js",
  "timeout": 30
}