{
  "id": "ag-dev",
  "uiHints": {
    "port": {
      "label": "AG Dev Server Port",
      "help": "Port for the AG Dev command center UI"
    },
    "projectRoot": {
      "label": "Project Root",
      "help": "Path to the project being managed by AG Dev"
    },
    "agents.definitionsDir": {
      "label": "Agent Definitions Directory",
      "help": "Path to agent .md files (relative to AG Dev root)"
    },
    "agents.autoSpawn": {
      "label": "Auto-spawn Agents",
      "help": "Automatically spawn agent sessions on server start"
    },
    "ui.theme": {
      "label": "UI Theme",
      "help": "dark or light (dark recommended)"
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "port": {
        "type": "integer",
        "minimum": 1,
        "maximum": 65535,
        "default": 3000
      },
      "projectRoot": {
        "type": "string"
      },
      "agents": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "definitionsDir": {
            "type": "string",
            "default": "./core/agents"
          },
          "autoSpawn": {
            "type": "boolean",
            "default": false
          },
          "defaultModel": {
            "type": "string"
          }
        }
      },
      "ui": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "theme": {
            "type": "string",
            "enum": ["dark", "light"],
            "default": "dark"
          }
        }
      }
    }
  }
}
