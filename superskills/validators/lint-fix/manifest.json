{
  "name": "lint-fix",
  "version": "1.0.0",
  "category": "validator",
  "description": "Lints and fixes code files using eslint/prettier for JavaScript/TypeScript or basic pattern-based checks for Python. Provides detailed reports of issues found and fixes applied.",
  "input": {
    "type": "json",
    "schema": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "Path to file or directory to lint"
        },
        "language": {
          "type": "string",
          "enum": ["js", "ts", "py"],
          "description": "Programming language (auto-detected if not specified)"
        }
      },
      "required": ["path"]
    },
    "required": ["path"],
    "example": {
      "path": "/tmp/my-project",
      "language": "js"
    }
  },
  "output": {
    "type": "json",
    "structure": {
      "type": "object",
      "properties": {
        "fixed": {
          "type": "number",
          "description": "Number of issues fixed"
        },
        "errors": {
          "type": "number",
          "description": "Number of errors found"
        },
        "warnings": {
          "type": "number",
          "description": "Number of warnings found"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": { "type": "string" },
              "issues": { "type": "array" }
            }
          },
          "description": "Per-file issue details"
        }
      }
    }
  },
  "tokenSavings": "Lints code without needing 200+ tokens of linting configuration and tool explanations",
  "tags": ["lint", "code", "javascript", "typescript", "python", "eslint"],
  "requires": ["node"],
  "run": "node run.js",
  "timeout": 120
}