{
  "name": "docx-builder",
  "version": "1.0.0",
  "category": "builder",
  "description": "Builds Microsoft Word DOCX files from scratch using Office Open XML format. Supports basic formatting including headers, paragraphs, bold, italic, and lists.",
  "input": {
    "type": "json",
    "schema": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Document title"
        },
        "content": {
          "type": "string",
          "description": "Document content in Markdown format"
        },
        "author": {
          "type": "string",
          "description": "Document author name"
        },
        "template": {
          "type": "string",
          "enum": ["report", "letter", "memo"],
          "description": "Document template style"
        }
      },
      "required": ["title", "content"]
    },
    "required": ["title", "content"],
    "example": {
      "title": "Project Report",
      "content": "# Introduction\n\nThis is a **bold** document with *italic* text.\n\n## Section 1\n\n- Item 1\n- Item 2\n- Item 3",
      "author": "John Doe",
      "template": "report"
    }
  },
  "output": {
    "type": "json",
    "structure": {
      "type": "object",
      "properties": {
        "filePath": {
          "type": "string",
          "description": "Path to generated DOCX file"
        }
      }
    }
  },
  "tokenSavings": "Generates formatted documents without needing 500+ tokens of Office XML formatting instructions",
  "tags": ["docx", "word", "document", "office", "format"],
  "requires": ["node"],
  "run": "node run.js",
  "timeout": 60
}