{
  "name": "article-extractor",
  "version": "1.0.0",
  "category": "transformer",
  "description": "Extracts clean article content from web pages or HTML, removing ads, navigation, and other non-content elements. Returns structured article data including title, author, date, and clean markdown content.",
  "input": {
    "type": "json",
    "schema": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL of the article to extract"
        },
        "html": {
          "type": "string",
          "description": "HTML content to extract article from"
        }
      },
      "oneOf": [
        { "required": ["url"] },
        { "required": ["html"] }
      ]
    },
    "required": [],
    "example": {
      "url": "https://example.com/article"
    }
  },
  "output": {
    "type": "json",
    "structure": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "date": { "type": "string" },
        "content": { "type": "string", "description": "Markdown formatted content" },
        "wordCount": { "type": "number" },
        "success": { "type": "boolean" }
      }
    }
  },
  "tokenSavings": "Saves 500-2000 tokens by extracting clean content instead of processing full web pages",
  "tags": ["web-scraping", "content-extraction", "readability", "markdown"],
  "requires": ["node"],
  "run": "node run.js",
  "timeout": 30
}